@page "/register"
@attribute [AllowAnonymous]
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IConfiguration Configuration

<PageTitle>Register</PageTitle>

<h3>Create an account</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="RegisterModel" OnValidSubmit="HandleRegisterAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText @bind-Value="RegisterModel.Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText @bind-Value="RegisterModel.Password" type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <InputText @bind-Value="RegisterModel.ConfirmPassword" type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone number</label>
        <InputText @bind-Value="RegisterModel.PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Realm</label>
        <InputSelect @bind-Value="RegisterModel.Realm" class="form-select">
            <option value="User">User</option>
            <option value="Partner">Partner</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">Tenant name</label>
        <InputText @bind-Value="RegisterModel.TenantName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Modules</label>
        @foreach (var module in AvailableModules)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="mod_reg_@module" checked="@SelectedModules.Contains(module)" @onclick="@(() => ToggleModule(module))" />
                <label class="form-check-label" for="mod_reg_@module">@module</label>
            </div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">ERP ID</label>
        <InputText @bind-Value="RegisterModel.ErpId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">GST number</label>
        <InputText @bind-Value="RegisterModel.GstNumber" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</EditForm>

@code {
    private RegisterRequestDto RegisterModel { get; set; } = new();
    private string? ErrorMessage { get; set; }
    private List<string> SelectedModules { get; } = new();
    private List<string> AvailableModules { get; } = new() { "CRM", "Inventory", "Books", "HR" };

    protected override void OnInitialized()
    {
        if (!SelectedModules.Any())
        {
            SelectedModules.Add("CRM");
        }
    }

    private async Task HandleRegisterAsync()
    {
        ErrorMessage = null;
        RegisterModel.SelectedModuleKeys = SelectedModules.ToList();
        // get recaptcha token if site key configured
        var siteKey = Configuration["Recaptcha:SiteKey"];
        if (!string.IsNullOrWhiteSpace(siteKey))
        {
            try
            {
                var token = await JS.InvokeAsync<string>("recaptcha.executeRecaptcha", siteKey);
                RegisterModel.RecaptchaToken = token;
            }
            catch
            {
                // ignore, server will validate
            }
        }

        var result = await AuthService.RegisterAsync(RegisterModel);
        if (result.Success)
        {
            // After registration we'll navigate to home for now.
            Navigation.NavigateTo("/", true);
        }
        else
        {
            ErrorMessage = result.ErrorMessage ?? "Registration failed.";
        }
    }

    private void ToggleModule(string moduleKey)
    {
        if (SelectedModules.Contains(moduleKey))
        {
            SelectedModules.Remove(moduleKey);
        }
        else
        {
            SelectedModules.Add(moduleKey);
        }
    }
}
