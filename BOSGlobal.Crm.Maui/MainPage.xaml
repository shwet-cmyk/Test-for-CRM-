<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
             x:Class="BOSGlobal.Crm.Maui.MainPage">
    <Grid Padding="0">
        <!-- Host a BlazorWebView to render shared Razor components inside the MAUI app -->
        <blazor:BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <blazor:BlazorWebView.RootComponents>
                <!-- RootComponent will be set from code-behind to the shared RCL's App component -->
            </blazor:BlazorWebView.RootComponents>
        </blazor:BlazorWebView>
    </Grid>
</ContentPage>
